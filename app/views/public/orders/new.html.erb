<div class="container takasa">
  <div class="row">


 
<%= form_with model: @order, url: public_orders_confirm_path do |f| %>
<h2>注文情報入力</h2>
<br>
<h3><strong><%= f.label :payment_method, "支払方法" %></strong></h3>
<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
<br>
<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>


      <h3><strong><%= f.label :address, "お届け先" %></strong></h3>
      <%= f.radio_button :select_address, 0, checked: "checked" %>
      <%= f.label :address, "ご自身の住所" %>
            <br>
      〒<%= @customer.postal_code %>
      <%= @customer.address %><br>
      <%= @customer.last_name %><%= @customer.first_name %>
            <br><br>
      <%= f.radio_button :select_address, 1 %>
      <%= f.label :address, "登録済住所から選択" %>
      <br>
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
      <br>
      
      <%= f.radio_button :select_address,2 %>
            <%= f.label :address, "新しいお届け先" %><br>
            <%= f.label :"郵便番号（ハイフンなし）"%><%= f.text_field :postal_code  %><br>
            <%= f.label :"住所"%><%= f.text_field :shipping_address ,size: "60" %><br>
            <%= f.label :"宛名"%><%= f.text_field :name %><br>

           <%= f.submit "確認画面に進む", class: "btn btn-primary text-cenrer" %>
        
        


<% end %>
</div>

  </div>
