<div class="row">

<h2>会員情報編集</h2>

<div class="col-md-8 offset-md-1"> 

<%= form_with model: @customer, url: public_customer_path(@customer.id) do |f| %>
  
<table>
<div class="field text-left">
  <tr>
    <th>会員ID</th>
    <td><%= @customer.id %></td>
  </tr>
  
  <tr>
    <th>氏名</th>
    <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
  </tr>
      
  <tr>
    <th>フリガナ</th>
    <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
  </tr>
  
  <tr>
    <th>郵便番号</th>
    <td><%= f.text_field :postal_code %></td>
  </tr>
  
  <tr>
    <th>住所</th>
    <td><%= f.text_area :address %></td>
  </tr>
  
  <tr>
    <th>電話番号</th>
    <td><%= f.text_field :telephone_number %></td>
  </tr>

  <tr>
    <th>メールアドレス</th>
    <td><%= f.text_field :email %></td>
  </tr>
 
</div> 
</table>
<%= f.submit "変更を保存する", class:"btn btn-primary" %>
<%= link_to :back do %>
  <button>戻る</button>
<% end %>

      </div>
      <div class="col-xs-3">
    <%= link_to "退会する", customers_quit_path ,class: "btn btn-danger " %>
      </div>
  
  <% end %>