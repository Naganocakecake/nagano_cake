<div class="row">

<h2>会員一覧</h2>


<div class="col-md-8 offset-md-1"> 
<table>
  <thead>
  <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
  </tr>
  </thead>
  
  
  <% @customers.each do |customer| %>
  
  
  <tbody>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to admin_customer_path(customer) do %>
        <%= customer.last_name %><%= customer.first_name %>
        <% end %></td>
      <td><%= customer.email %></td>
    </tr>
  </tbody>
  <% end %>
  </table>
</div>
</div>