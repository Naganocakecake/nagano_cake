<div class="container takasa">
  <h2>注文履歴一覧</h2><br>
	<table class="table">
	  <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
      <th></th>
    </tr>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td> <%= link_to admin_order_path(order_detail.order.id) do %>
      <%= order_detail.created_at %><% end %></td>
      <td><%= order_detail.order.name %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.order.status_i18n %></td>

    </tr>
    <% end %>
  </table>
  <%= paginate @order_details %>
</div>