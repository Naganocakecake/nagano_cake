<div class="row">

<h2>商品一覧</h2>


<div class="col-md-8 offset-md-1"> 
<table>
  <thead>
  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>ジャンル</th>
    <th>商品説明</th>
    <th>税抜き価格</th>
    <th>販売ステータス</th>
  </tr>
  </thead>
  <% @items.each do |item| %>
  <tbody>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to admin_item_path(item.id) do %>
        <%= item.name %>
        <% end %></td>
      <td><%= item.genre.name %></td>
      <td><%= item.introduction %></td>
      <td><%= item.price %></td>
      <td><%= item.is_active %></td>
    </tr>
  </tbody>
  <% end %>
  </table>
</div>
</div>