<div class="row">



<div class="col-md-8 offset-md-1"> 
<h2>商品一覧</h2>
      <td><%= link_to "新規登録", new_admin_item_path %> </td>

<table>
  <thead>
  <tr>
    <th>商品画像</th>
    <th>商品ID</th>
    <th>商品名</th>
    <th>ジャンル</th>
    <th>商品説明</th>
    <th>税抜き価格</th>
    <th>販売ステータス</th>
  </tr>
  </thead>
  <% @items.each do |item| %>
  <tbody>
    <tr>
  <td><% if item.image.attached? %>
    <%= image_tag item.image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
  <% end %></td>
      <td><%= item.id %></td>
      <td><%= link_to admin_item_path(item.id) do %>
        <%= item.name %>
        <% end %></td>
      <td><%= item.genre.name %></td>
      <td><%= item.introduction %></td>
      <td><%= item.price %></td>
      <td>                <% if item.is_active %>
                   販売中
                  <% else %>
                  販売停止
                <% end %></td>
    </tr>
  </tbody>
  <% end %>
  </table>
</div>
</div>