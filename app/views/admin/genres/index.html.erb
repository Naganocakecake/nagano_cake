<div class="row">

<h2>ジャンル追加・一覧</h2>

<%= form_with model: @genre,url: admin_genres_path do |f| %>
  <label for="genre_name">ジャンル</label>
  <%= f.text_field :name %>
  <%= f.submit "追加" %>
  <% end %>


<div class="col-md-8 offset-md-1"> 
<table>
  <tr>
    <th>ジャンル</th>
  </tr>
  <% @genres.each do |genre| %>

  
  <tr>
<td><%= genre.name %></td>
<td><%= link_to "編集", edit_admin_genre_path(genre.id) %> </td>
  </tr>
  

<% end %>
</table>
</div>
</div>